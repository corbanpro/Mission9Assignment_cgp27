@page
@model Mission9Assignment_cgp27.Pages.BuyBookModel
@{
}

<h2>Your Basket</h2>

<div class="alert alert-success">
    <strong>Success!</strong> Book Added to Your Cart!!
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Title</td>
            <td>Quantity</td>
            <td>Price</td>
            <td>Subtotal</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.basket.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price</td>
            <td>@(i.Quantity * i.Book.Price)</td>
        </tr>

        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Donating</a>
</div>

