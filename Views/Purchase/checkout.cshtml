@{
}

@model Purchase

    <h2>Check Out Now</h2>
    <p>Please enter your details, and we will send your books your way!</p>

    <form method="post" asp-controller="Purchase" asp-action="Checkout">
        
        <div asp-validation-summary="All" class="text-danger"></div>

        <h4>Ship To</h4>

        <div>
            <label asp-for="Name">Name:</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <br />
        <h4>Address</h4>
        <div class="form-group">
            <label asp-for="AddressLine1">Address Line 1:</label>
            <input asp-for="AddressLine1" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="AddressLine2">Address Line 2:</label>
            <input asp-for="AddressLine2" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="AddressLine3">Address Line 3:</label>
            <input asp-for="AddressLine3" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="State">State:</label>
            <input asp-for="State" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Zip">Zip:</label>
            <input asp-for="Zip" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Country">Country:</label>
            <input asp-for="Country" type="text" class="form-control" />
        </div>
        <br />

        <div class="float-end">
            <input type="submit" class="btn btn-primary"  value="Purchase Book" />
        </div>



    </form>


