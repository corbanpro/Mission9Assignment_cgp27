@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title <br />
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Author: @Model.Author</small>
            </span>  <br />
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Publisher: @Model.Publisher</small>
            </span> <br>
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Isbn: @Model.Isbn</small>
            </span> <br>
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Classification: @Model.Classification</small>
            </span> <br>
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Category: @Model.Category</small>
            </span> <br>
            <span class="badge badge-pill badge-primary" style="color: black">
                <small>Page Count: @Model.PageCount</small>
            </span> <br>
            <span class="badge badge-info mark" style="color: black; float: right">
                <small>Price: $@Model.Price</small>
            </span>

        </h3>
    </div>
    
    <form method="post" asp-page="/BuyBook">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Buy Book</button>
        </span>
    </form>
</div>

